algoritmo "fatorial2"
var
   N, cont, F: inteiro
   R: caracter
inicio
   Repita
      Escreva ("Digite um numero: ")
      Leia (N)
      cont <- N
      F <- 1
      Repita
         F <- F * cont
         cont <- cont - 1
      Ate (cont < 1)
      EscrevaL ("O valor do fatorial de ", N, " Ã© igual a", F)
      Escreva ("Quer continuar? ")
      Leia (R)
      LimpaTela
   Ate (R = "N")
fimalgoritmo
