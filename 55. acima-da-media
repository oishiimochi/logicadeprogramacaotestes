algoritmo "Turma"
var
   nome: vetor[1..4] de caracter
   n1: vetor[1..4] de real
   n2: vetor[1..4] de real
   m: vetor [1..4] de real
   i, TOT: inteiro
   SM, MT: real
inicio
   Para i <- 1 ate 4 faca
      EscrevaL("ALUNO", i)
      Escreva ("Nome: ")
      Leia (nome[i])
      Escreva("Primeira Nota: ")
      Leia (n1[i])
      Escreva("Segunda Nota: ")
      Leia (n2[i])
      m[i] <- (n1[i] + n2[i])/2
      SM <- SM + M[i]
   FimPara
   MT <- SM / 4
   LimpaTela
   EscrevaL ("LISTAGEM DE ALUNOS")
   EscrevaL ("------------------")
   Para i <-1 ate 4 faca
      EscrevaL (nome[i]:15, m[i]:4:1)
      Se m[i] > MT entao
         TOT <- TOT + 1
      FimSe
   FimPara
   Escreva("Ao todo, temos", tot, " alunos acima da média, que é ", MT:4:1)
fimalgoritmo
