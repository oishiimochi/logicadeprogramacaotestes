algoritmo "Torneio-Futebol"
var
   time: vetor[1..3] de caracter
   a, b: inteiro
inicio
   EscrevaL ("-------------------")
   EscrevaL ("CAMPEONATO BASQUETE")
   EscrevaL ("-------------------")
   Para a <- 1 ate 3 faca
      Escreva("Nome do", a, "ยบ time: ")
      Leia(time[a])
   FimPara
   LimpaTela
   Escreval("--------------------")
   Escreval("TABELA DE CAMPEONATO")
   Escreval("--------------------")
   Para a <- 1 ate 3 faca
      Para b <- 1 ate 3 faca
         Se (a <> b) entao
            Escreval(time[a]:12, "[ ] x [ ] ", time[b]:12)
         FimSe
      FimPara
   FimPara
fimalgoritmo
