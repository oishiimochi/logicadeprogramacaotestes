algoritmo "sValoresPares"
var
   val: vetor[1..7] de inteiro
   i, ToTPar: inteiro
inicio
   TotPar <- 0
   Para i <- 1 ate 7 faca
      Escreva ("Digite o", i, "º valor: ")
      Leia (val[i])
      Se (val[i] % 2 = 0) entao
         TotPar <- TotPar + 1
      FimSe
   FimPara
   Escreva ("O total de números pares foi", TotPar)
fimalgoritmo
