algoritmo "ContaNegativos"
var
   N, cont, TotN: inteiro
inicio
   cont <- 1
   TotN <- 0
   Repita
      Escreva ("Digite um nÃºmero ")
      Leia (N)
      Se (N < 0) entao
         TotN <- TotN  + 1
      FimSe
      cont <- cont + 1
   Ate (cont > 5)
   EscrevaL ("")
   Escreva ("Foram digitados", TotN, " valores negativos")
fimalgoritmo
