algoritmo "SomadorNumerico"
var
   cont, N, S, maior: inteiro
inicio
   cont <- 1
   S <- 0
   Enquanto (cont <= 5) faca
      Escreva ("Digite o", cont, "º valor: ")
      Leia (N)
      Se (N > maior) entao
         maior <- N
         S <- N + S
      FimSe
      cont <- cont + 1
   FimEnquanto
   EscrevaL ("")
   EscrevaL ("A soma de todos os valores é:", S)
   EscrevaL ("O maior valor digitado foi", maior)
fimalgoritmo
