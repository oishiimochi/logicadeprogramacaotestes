algoritmo "DetectorPesado"
var
   I: inteiro
   N, pesado: caractere
   P, maior: real
Procedimento Topo ()
inicio
   LimpaTela
   EscrevaL ("-----------------------------------")
   EscrevaL ("D E T E C T O R   D E   P E S A D O")
   EscrevaL ("Maior peso at√© agora", maior, "kg")
   EscrevaL ("-----------------------------------")
FimProcedimento
inicio
   Topo ()
   Para I <- 1 ate 5 faca
      Escreva ("Digite o nome: ")
      Leia (N)
      Escreva ("Digite o peso de ", N, " : ")
      Leia (P)
      Se (P > maior) entao
         maior <- P
         pesado <- N
      FimSe
      Topo ()
   FimPara
   Topo ()
   Escreva ("A pessoa mais pesada foi ", pesado, " com ", maior, " kg.")
fimalgoritmo
