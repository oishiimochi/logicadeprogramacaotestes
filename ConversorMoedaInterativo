algoritmo "ConversorMoedaInterativo"
var
   reais, dolar: real
   cont, quant: inteiro
inicio
   cont <- 1
   Escreva ("Quantas vezes você deseja converter? ")
   Leia (quant)
   Escreval ("")
   Enquanto (cont <= quant) faca
      Escreva ("Quantos reais você tem? R$ ")
      Leia (reais)
      dolar <- reais/5.17
      EscrevaL ("Você possui US$ ", dolar:5:2)
      EscrevaL ("")
      cont <- cont + 1
   FimEnquanto
fimalgoritmo
